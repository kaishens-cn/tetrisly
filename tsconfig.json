{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib/",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
//      "@/*": ["./*"]
    }
  },
  "include": [
    "./src",
    "./__test__",
    "./example",
    "webpack.dev.ts"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules",
  ]
}
